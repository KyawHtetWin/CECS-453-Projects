<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >

    <ImageView
        android:id="@+id/vehicle_thumbnail_image_view"
        android:layout_width="150px"
        android:layout_height="150px"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image_coming_soon" />

    <TextView
        android:id="@+id/make_model_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Make Model"
        app:layout_constraintStart_toEndOf="@+id/vehicle_thumbnail_image_view"
        app:layout_constraintTop_toTopOf="@+id/vehicle_thumbnail_image_view" />

    <TextView
        android:id="@+id/date_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Listing Date"
        app:layout_constraintBottom_toBottomOf="@+id/vehicle_thumbnail_image_view"
        app:layout_constraintStart_toEndOf="@+id/vehicle_thumbnail_image_view" />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:text="$"
        app:layout_constraintBottom_toTopOf="@+id/date_text_view"
        app:layout_constraintEnd_toEndOf="@+id/date_text_view"
        app:layout_constraintTop_toBottomOf="@+id/make_model_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>